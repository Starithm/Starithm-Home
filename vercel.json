{
  "buildCommand": "npm run install:all && npm run build:all",
  "outputDirectory": "dist",

      "rewrites": [
      { "source": "/assets/(.*)", "destination": "/assets/$1" },
      { "source": "/home-assets/(.*)", "destination": "/home/home-assets/$1" },
      { "source": "/novatrace-assets/(.*)", "destination": "/novatrace/novatrace-assets/$1" },
      { "source": "/blog-assets/(.*)", "destination": "/blog/blog-assets/$1" },

      { "source": "/novatrace", "destination": "/index.html" },
      { "source": "/novatrace/", "destination": "/index.html" },
      { "source": "/novatrace/(.*)", "destination": "/index.html" },

      { "source": "/home", "destination": "/index.html" },
      { "source": "/home/", "destination": "/index.html" },
      { "source": "/home/(.*)", "destination": "/index.html" },

      { "source": "/blog", "destination": "/index.html" },
      { "source": "/blog/", "destination": "/index.html" },
      { "source": "/blog/(.*)", "destination": "/index.html" }
    ],

  "headers": [
    {
      "source": "/(home|novatrace)/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(home|novatrace)/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" }
      ]
    }
  ]
}
